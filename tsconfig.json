{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node", // Added moduleResolution
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021", // Adjust if necessary based on Node.js version
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    // Consider enabling stricter type checking:
    "strict": false,
    "noImplicitAny": false, // If you prefer, you can set individual options
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"], // Added include
  "exclude": ["node_modules"] // Added exclude
}